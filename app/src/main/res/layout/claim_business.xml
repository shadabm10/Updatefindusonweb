<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@mipmap/header"
        >

        <ImageView
            android:id="@+id/header_image"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo_white"
            android:layout_centerInParent="true"

            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/serach_edittext"
            android:layout_width="180sp"
            android:singleLine="true"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:backgroundTint="@android:color/transparent"
            android:textColorHint="@color/white"
            android:hint="Search by code"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:text="Back"
            android:layout_marginRight="10sp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:contentDescription="@string/app_name"
            android:background="@drawable/button_home_screee"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recommend A Business"
        android:tint="@color/white"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:padding="10sp"
        android:textStyle="bold"
        android:id="@+id/post_text" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:id="@+id/RL_requirement"
            android:layout_marginBottom="20dp"

            >
            <EditText
                android:id="@+id/edt_listingname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/listingname"
                android:gravity="start"
                android:textSize="14sp"
                android:clickable="false"
                android:textColorHint="@color/dark_grey"
                android:background="@android:color/transparent"
                android:padding="15sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>



            <EditText
                android:id="@+id/edt_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Location"
                android:clickable="false"
                android:gravity="start"
                android:textSize="14sp"
                android:singleLine="true"
                android:textColorHint="@color/dark_grey"
                android:background="@android:color/transparent"
                android:padding="15sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <EditText
                android:id="@+id/edt_requestername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Requester Name"
                android:gravity="start"
                android:textSize="14sp"
                android:singleLine="true"
                android:background="@android:color/transparent"
                android:padding="15sp"
                android:textColorHint="@color/dark_grey"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <EditText
                android:id="@+id/edt_phn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:gravity="start"
                android:textSize="14sp"
                android:inputType="number"
                android:singleLine="true"
                android:background="@android:color/transparent"
                android:padding="15sp"
                android:textColorHint="@color/dark_grey"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:gravity="start"
                android:textSize="14sp"
                android:inputType="textEmailAddress"

                android:singleLine="true"
                android:background="@android:color/transparent"
                android:padding="15sp"
                android:textColorHint="@color/dark_grey"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>


            <EditText

                android:id="@+id/edt_comment"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:hint="Comment "
                android:gravity="start"
                android:textSize="14sp"
                android:textColorHint="@color/dark_grey"
                android:background="@android:color/transparent"
                android:padding="15sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_marginBottom="20sp">

                <TextView
                    android:id="@+id/tv_submit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@color/button"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/claimbusiness"
                    android:textColor="@color/white" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>
