<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/register_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/top_view_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"

                >


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/logo_white"
                    android:layout_gravity="center"
                    android:padding="5sp"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top_view_rl"

                >


                <TextView
                    android:id="@+id/signup_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/white"
                    android:text="@string/tagline"/>




            </RelativeLayout>
            <LinearLayout
                android:id="@+id/rl_details"
                android:layout_below="@+id/rl_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rl_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ico_user" />

                    <EditText
                        android:id="@+id/username_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="5dp"
                        android:paddingLeft="20dp"
                        android:textSize="14sp"
                        android:backgroundTint="@android:color/transparent"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:hint="@string/username"
                        android:drawablePadding="15dp"
                        android:layout_toEndOf="@+id/img_username"
                        android:layout_toRightOf="@+id/img_username" />


                </RelativeLayout>
                <View android:id="@+id/separator_username"
                    android:background="#ffffff"
                    android:layout_width = "match_parent"
                    android:layout_height="1dip"
                    />


                <RelativeLayout
                    android:id="@+id/rl_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/mail24" />

                    <EditText
                        android:id="@+id/email_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="5dp"
                        android:paddingLeft="20dp"
                        android:textSize="14sp"
                        android:backgroundTint="@android:color/transparent"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:hint="@string/email"
                        android:drawablePadding="15dp"
                        android:layout_toEndOf="@+id/img_email"
                        android:layout_toRightOf="@+id/img_email" />


                </RelativeLayout>
                <View android:id="@+id/separator_email"
                    android:background="#ffffff"
                    android:layout_width = "match_parent"
                    android:layout_height="1dip"
                    />
                <RelativeLayout
                    android:id="@+id/rl_repeat_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_repeat_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/mail24" />

                    <EditText
                        android:id="@+id/repeat_email_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="5dp"
                        android:paddingLeft="20dp"
                        android:textSize="14sp"
                        android:backgroundTint="@android:color/transparent"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:hint="@string/repeat_email"
                        android:drawablePadding="15dp"
                        android:layout_toEndOf="@+id/img_repeat_email"
                        android:layout_toRightOf="@+id/img_repeat_email" />


                </RelativeLayout>
                <View
                    android:id="@+id/separator_email_confirm"
                    android:background="#ffffff"
                    android:layout_width = "match_parent"
                    android:layout_height="1dip"
                    />
                <RelativeLayout
                    android:id="@+id/rl_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:tint="@color/white"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ico_phone" />

                    <EditText
                        android:id="@+id/phone_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="5dp"
                        android:paddingLeft="20dp"
                        android:textSize="14sp"
                        android:backgroundTint="@android:color/transparent"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:hint="@string/phone"
                        android:drawablePadding="15dp"
                        android:layout_toEndOf="@+id/img_phone"
                        android:layout_toRightOf="@+id/img_phone" />


                </RelativeLayout>
                <View
                    android:id="@+id/separator_phone_new"
                    android:background="#ffffff"
                    android:layout_width = "match_parent"
                    android:layout_height="1dip"
                    />


                <LinearLayout
                    android:id="@+id/rl_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"


                    >
                    <RelativeLayout
                        android:id="@+id/rl_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_pass"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/ico_pass" />

                        <EditText
                            android:id="@+id/password_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginBottom="5dp"
                            android:paddingLeft="20dp"
                            android:textSize="14sp"
                            android:backgroundTint="@android:color/transparent"
                            android:textColorHint="@color/white"
                            android:textColor="@color/white"
                            android:hint="@string/password"
                            android:drawablePadding="15dp"
                            android:layout_toEndOf="@+id/img_pass"
                            android:layout_toRightOf="@+id/img_pass" />


                    </RelativeLayout>
                    <View android:id="@+id/separator_password"
                        android:background="#ffffff"
                        android:layout_width = "match_parent"
                        android:layout_height="1dip"
                        />

                    <RelativeLayout
                        android:id="@+id/rl_repeat_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_re_pass"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/ico_pass" />

                        <EditText
                            android:id="@+id/re_password_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginBottom="5dp"
                            android:paddingLeft="20dp"
                            android:textSize="14sp"
                            android:backgroundTint="@android:color/transparent"
                            android:textColorHint="@color/white"
                            android:textColor="@color/white"
                            android:hint="@string/repeat_pass"
                            android:drawablePadding="15dp"
                            android:layout_toEndOf="@+id/img_re_pass"
                            android:layout_toRightOf="@+id/img_re_pass" />


                    </RelativeLayout>
                    <View android:id="@+id/separator_re_pass"
                        android:background="#ffffff"
                        android:layout_width = "match_parent"
                        android:layout_height="1dip"
                        />

                    <RelativeLayout
                        android:id="@+id/rl_business_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_business_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/username24" />

                        <EditText
                            android:id="@+id/business_name_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginBottom="5dp"
                            android:paddingLeft="20dp"
                            android:textSize="14sp"
                            android:backgroundTint="@android:color/transparent"
                            android:textColorHint="@color/white"
                            android:textColor="@color/white"
                            android:hint="@string/businee_name"
                            android:drawablePadding="15dp"
                            android:layout_toEndOf="@+id/img_business_name"
                            android:layout_toRightOf="@+id/img_business_name" />


                    </RelativeLayout>
                    <View android:id="@+id/separator_business_name"
                        android:background="#ffffff"
                        android:layout_width = "match_parent"
                        android:layout_height="1dip"
                        />

                    <RelativeLayout
                        android:id="@+id/rl_business_first"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_business_first"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/username24" />

                        <EditText
                            android:id="@+id/business_first_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginBottom="5dp"
                            android:paddingLeft="20dp"
                            android:textSize="14sp"
                            android:backgroundTint="@android:color/transparent"
                            android:textColorHint="@color/white"
                            android:textColor="@color/white"
                            android:hint="@string/owner_first_name"
                            android:drawablePadding="15dp"
                            android:layout_toEndOf="@+id/img_business_first"
                            android:layout_toRightOf="@+id/img_business_first" />


                    </RelativeLayout>

                    <View android:id="@+id/separator_last"
                        android:background="#ffffff"
                        android:layout_width = "match_parent"
                        android:layout_height="1dip"

                        />
                    <RelativeLayout
                        android:id="@+id/rl_business_last"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_business_last"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/username24" />

                        <EditText
                            android:id="@+id/business_last_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginBottom="5dp"
                            android:paddingLeft="20dp"
                            android:textSize="14sp"
                            android:backgroundTint="@android:color/transparent"
                            android:textColorHint="@color/white"
                            android:textColor="@color/white"
                            android:hint="@string/owner_last_name"
                            android:drawablePadding="15dp"
                            android:layout_toEndOf="@+id/img_business_last"
                            android:layout_toRightOf="@+id/img_business_last" />


                    </RelativeLayout>

                    <View android:id="@+id/separator_phone"
                        android:background="#ffffff"
                        android:layout_width = "match_parent"
                        android:layout_height="1dip"
                        />

                    <RelativeLayout
                        android:id="@+id/rl_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/ico_country" />

                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/img_icon"
                            android:layout_toLeftOf="@+id/down_arrow"
                            android:gravity="center"
                            android:padding="10dp"
                            android:popupBackground="#0082c4"
                            android:background="@android:color/transparent"
                            android:spinnerMode="dropdown"
                            android:layout_toStartOf="@+id/down_arrow"
                            android:layout_toEndOf="@+id/img_icon" />

                        <ImageView
                            android:id="@+id/down_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:onClick="showDropDown"
                            android:src="@mipmap/dropdown16"
                            android:layout_alignParentEnd="true" />

                    </RelativeLayout>
                    <View android:id="@+id/separator"
                        android:background="#ffffff"
                        android:layout_width = "match_parent"
                        android:layout_height="1dip"
                        />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/rl_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >


                    <RelativeLayout
                        android:id="@+id/city_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/ico_city" />

                        <Spinner
                            android:id="@+id/spinner1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/img1"
                            android:layout_toLeftOf="@+id/down_arrow1"
                            android:gravity="center"
                            android:padding="10dp"
                            android:popupBackground="#0082c4"
                            android:background="@android:color/transparent"
                            android:spinnerMode="dropdown"
                            android:layout_toStartOf="@+id/down_arrow1"
                            android:layout_toEndOf="@+id/img1" />

                        <ImageView
                            android:id="@+id/down_arrow1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:onClick="showDropDown"
                            android:src="@mipmap/dropdown16"
                            android:layout_alignParentEnd="true" />

                    </RelativeLayout>
                    <View android:id="@+id/separator1"
                        android:background="#ffffff"
                        android:layout_width = "fill_parent"
                        android:layout_height="1dip"
                        />


                </LinearLayout>


            </LinearLayout>


            <TextView
                android:id="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/rl_details"
                android:layout_marginTop="12dp"
                android:background="@drawable/grey_bg_tv"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/button_Register"
                android:textColor="@color/button"
                android:textSize="18sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_below="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/are_you_member"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/login_register"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white"
                    android:id="@+id/login"/>

            </LinearLayout>
        </LinearLayout>


    </ScrollView>

</RelativeLayout>