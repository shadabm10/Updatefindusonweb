<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:gravity="end">
        <ImageView android:id="@+id/cut_dialog" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="end" android:padding="10dp" android:src="@mipmap/close24" android:contentDescription="@string/app_name" /> </LinearLayout> <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" tools:ignore="UselessParent" > <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" >
    <RelativeLayout android:id="@+id/top_view_rl" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:layout_marginBottom="20sp">
        <ImageView android:layout_width="200sp"
            android:layout_height="200sp"
            android:src="@mipmap/invite_fr"
            android:layout_gravity="center" />
    </RelativeLayout>
    <RelativeLayout
    android:id="@+id/rl_sign_in"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/top_view_rl" >
</RelativeLayout>
    <LinearLayout
    android:id="@+id/rl_details"
        android:layout_below="@+id/rl_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@android:color/transparent"
            android:drawableLeft="@mipmap/ico_user_dialog"
            android:drawablePadding="15dp"
            android:singleLine="true"
            android:hint="@string/firstname"
            android:paddingLeft="15dp"
            android:textColorHint="@color/black"
            android:textSize="14sp" />
    </RelativeLayout> <View android:id="@+id/separator_username" android:background="#696969" android:layout_width = "fill_parent" android:layout_height="1dip" android:layout_centerVertical ="true" android:layout_alignParentTop="true"/> <RelativeLayout android:id="@+id/rl_lname" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rl_fname" >
    <EditText android:id="@+id/lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:textSize="14sp"
        android:backgroundTint="@android:color/transparent"
        android:textColorHint="@color/black"
        android:hint="@string/lastname"
        android:drawablePadding="15dp"
        android:drawableLeft="@mipmap/ico_user_dialog" android:layout_marginTop="5dp" /> </RelativeLayout>
    <View android:id="@+id/separator_email"
        android:background="#696969"
        android:layout_width = "fill_parent"
        android:layout_height="1dip"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"/>
    <RelativeLayout
        android:id="@+id/rl_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_fname" >
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingLeft="15dp"
            android:textSize="14sp"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:backgroundTint="@android:color/transparent"
            android:textColorHint="@color/black"
            android:hint="@string/email"
            android:drawablePadding="15dp"
            android:drawableLeft="@mipmap/ico_mail"
            android:layout_marginTop="5dp" />
    </RelativeLayout>
    <View android:id="@+id/separator_email1"
        android:background="#696969"
        android:layout_width = "fill_parent"
        android:layout_height="1dip"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"/>
    <RelativeLayout
        android:id="@+id/rl_business_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_fname" >
        <EditText
            android:id="@+id/business_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingLeft="15dp"
            android:textSize="14sp"
            android:singleLine="true"
            android:backgroundTint="@android:color/transparent"
            android:textColorHint="@color/black"
            android:hint="@string/businee_name"
            android:drawablePadding="15dp"
            android:drawableLeft="@mipmap/ico_business"
            android:layout_marginTop="5dp" />
    </RelativeLayout>
    <View android:id="@+id/separator_business"
        android:background="#696969"
        android:layout_width = "fill_parent"
        android:layout_height="1dip"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"/>
    <RelativeLayout
        android:id="@+id/rl_phone_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_fname" >
        <EditText
            android:id="@+id/phoone_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingLeft="15dp"
            android:textSize="14sp"
            android:inputType="number"
            android:singleLine="true"
            android:backgroundTint="@android:color/transparent"
            android:textColorHint="@color/black"
            android:hint="@string/phone"
            android:drawablePadding="15dp"
            android:drawableLeft="@mipmap/ico_phone"
            android:layout_marginTop="5dp" />

    </RelativeLayout>
    <View android:id="@+id/separator_phone"
        android:background="#696969"
        android:layout_width = "fill_parent"
        android:layout_height="1dip"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"/>
    <RelativeLayout
        android:id="@+id/rl_campaign_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_fname" >
        <EditText
            android:id="@+id/campaign_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingLeft="15dp"
            android:textSize="14sp"
            android:backgroundTint="@android:color/transparent"
            android:textColorHint="@color/black"
            android:hint="@string/referral_code"
            android:singleLine="true"
            android:drawablePadding="15dp"
            android:drawableLeft="@mipmap/ico_phone"
            android:layout_marginTop="5dp" />

    </RelativeLayout>
    <View android:id="@+id/separator_campaign"
        android:background="#696969"
        android:layout_width = "fill_parent"
        android:layout_height="1dip"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"/>

</LinearLayout> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@+id/rl_details"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="20sp">
    <TextView android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:padding="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_weight="1"
        android:textSize="18sp"
        android:background="@drawable/dialog_button"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"/>
    <TextView android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:text="SAVE"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/dialog_button"/>
</LinearLayout>
</RelativeLayout>
</ScrollView>
</LinearLayout>