<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@mipmap/header"
        >

        <ImageView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo_white"
            android:layout_centerInParent="true"

            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:text="Back"
            android:layout_marginRight="10sp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:contentDescription="@string/app_name"
            android:background="@drawable/button_home_screee"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >


        <TextView
            android:id="@+id/post_requirement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/post_req"
            android:textColor="@color/white"
            android:layout_marginRight="5dp"
            android:background="@color/button"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="10sp"
            android:padding="10dp"
            android:layout_margin="5dp"
            />




    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_text"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <EditText
            android:id="@+id/browse_job_keywords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tint="@color/grey_text"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="KEYWORDS"
            android:gravity="center"
            android:layout_weight="1"

            android:textSize="10sp"
            android:backgroundTint="@color/grey_text"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            />

        <EditText
            android:id="@+id/browse_job_business"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tint="@color/grey_text"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="BUSINESS"
            android:gravity="center"
            android:textSize="10sp"
            android:layout_weight="1"
            android:backgroundTint="@color/grey_text"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/browser_job_low"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tint="@color/grey_text"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="LOW"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="10sp"
                android:backgroundTint="@color/grey_text"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="TO"
    android:padding="10dp"
    android:textSize="10dp"
    android:layout_gravity="center"
    />

            <EditText
                android:id="@+id/browser_job_hign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tint="@color/grey_text"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="HIGH"
                android:gravity="center"
                android:textSize="10sp"
                android:layout_weight="1"
                android:backgroundTint="@color/grey_text"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                />
        <TextView
            android:id="@+id/browse_job_search"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="10dp"
            android:gravity="center"
            android:background="@drawable/blue_bg_tv"
            android:layout_gravity="center"
            />
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/grey_text"/>

    <ListView
        android:id="@+id/list_browse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/img_sort"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/img_sort" />


</LinearLayout>