<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_invoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_invoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Business     "
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/tv_busniess_value"
            android:layout_toRightOf="@+id/tv_invoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="16dp"/>



    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_order"
        android:layout_below="@+id/rl_invoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name "
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/tv_first_value"
            android:layout_toRightOf="@+id/tv_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="16dp"/>



    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_type"
        android:layout_below="@+id/rl_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name "
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16dp"/>


        <TextView
            android:id="@+id/tv_lastname_value"
            android:layout_toRightOf="@+id/tv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="16dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_estimated_cashback"
        android:layout_below="@+id/rl_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email           "
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/tv_email_value"
            android:layout_toRightOf="@+id/tv_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="16dp"/>



    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_date"
        android:layout_below="@+id/rl_estimated_cashback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone         "
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/tv_phone_value"
            android:layout_toRightOf="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="16dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_balance"
        android:layout_below="@+id/rl_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status         "
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/tv_status_value"
            android:layout_toRightOf="@+id/tv_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"

            android:padding="10dp"
            android:textSize="16dp"/>

    </RelativeLayout>


</RelativeLayout>
