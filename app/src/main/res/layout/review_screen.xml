<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@mipmap/header"
        >

        <ImageView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo_white"
            android:layout_centerInParent="true"

            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:text="Back"
            android:layout_marginRight="10sp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:contentDescription="@string/app_name"
            android:background="@drawable/button_home_screee"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/review"
        android:textSize="18sp"
        android:background="@android:color/transparent"


        android:textStyle="bold"
       />
    <EditText
        android:id="@+id/title_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/title"
        android:gravity="start"
        android:textSize="16sp"
        android:padding="10dp"
        android:background="@drawable/edittext_border"
        android:textColorHint="@color/grey_text"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"

        >

        <TextView
            android:id="@+id/tv_rating"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rating "
            android:layout_weight="2"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:contentDescription="@string/app_name"
            tools:ignore="SmallSp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">

            <RatingBar
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:isIndicator="false"
                style="?android:attr/ratingBarStyleIndicator"
                android:stepSize="1"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        >

        <TextView
            android:id="@+id/features_rating"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/features_rating"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:contentDescription="@string/app_name"
            tools:ignore="SmallSp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">


        <RatingBar
            android:id="@+id/features_ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:isIndicator="false"
            android:stepSize="1"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_centerVertical="true"

            />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"

        >

        <TextView
            android:id="@+id/performance_rating"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/performance_rating"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:contentDescription="@string/app_name"
            tools:ignore="SmallSp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">


            <RatingBar
                android:id="@+id/performance_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:max="5"
                android:stepSize="1"
                android:isIndicator="false"
                style="?android:attr/ratingBarStyleIndicator"
                />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"

        >

        <TextView
            android:id="@+id/reliable_rating"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reliability_rating"
            android:layout_weight="2"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="start"

            android:layout_gravity="center_vertical"

            android:padding="5dp"
            android:contentDescription="@string/app_name"
            tools:ignore="SmallSp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <RatingBar
                android:id="@+id/reliablity_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:isIndicator="false"
                style="?android:attr/ratingBarStyleIndicator"
                />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"

        >

        <TextView
            android:id="@+id/value_rating"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/value_rating"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:contentDescription="@string/app_name"
            tools:ignore="SmallSp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">

            <RatingBar
                android:id="@+id/value_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:isIndicator="false"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minHeight="100dp">

            <EditText
                android:id="@+id/review_note"
                android:layout_width="match_parent"
                android:layout_height="140sp"
                android:hint="@string/review"
                android:gravity="start"
                android:textSize="16sp"
                android:inputType="textMultiLine"
                android:textColorHint="@color/grey_text"
                android:background="@drawable/edittext_border"
                android:padding="15sp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/save_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit_review"
            android:textColor="@color/white"
            android:background="@color/button"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_marginTop="10sp"

            />

    </LinearLayout>

    </ScrollView>
</LinearLayout>