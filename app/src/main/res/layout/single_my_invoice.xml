<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_invoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_invoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invoice ID # :"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/tv_invoice_value"
            android:layout_toRightOf="@+id/tv_invoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="16dp"/>



    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_order"
        android:layout_below="@+id/rl_invoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order #         :"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/tv_order_value"
            android:layout_toRightOf="@+id/tv_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="16dp"/>



    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_type"
        android:layout_below="@+id/rl_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type             :"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16dp"/>


        <TextView
            android:id="@+id/tv_type_value"
            android:layout_toRightOf="@+id/tv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="16dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_estimated_cashback"
        android:layout_below="@+id/rl_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total             :"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/tv_total_value"
            android:layout_toRightOf="@+id/tv_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="16dp"/>



    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_date"
        android:layout_below="@+id/rl_estimated_cashback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date              :"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/tv_date_value"
            android:layout_toRightOf="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="16dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_balance"
        android:layout_below="@+id/rl_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance        :"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/tv_balance_value"
            android:layout_toRightOf="@+id/tv_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="16dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_payment_status"
        android:layout_below="@+id/rl_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Status:"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/tv_paymemt_value"
            android:layout_toRightOf="@+id/tv_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@color/light_green"
            android:textSize="16dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/pay_invoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay Invoice"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:background="@color/orange"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/rl_payment_status"
        />

</RelativeLayout>
