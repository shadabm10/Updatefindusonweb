<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@mipmap/header"
        >

        <ImageView
            android:id="@+id/header_image"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo_white"
            android:layout_centerInParent="true"

            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/serach_edittext"
            android:layout_width="180sp"
            android:singleLine="true"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:backgroundTint="@android:color/transparent"
            android:textColorHint="@color/white"
            android:hint="Search by code"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:text="Back"
            android:layout_marginRight="10sp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:contentDescription="@string/app_name"
            android:background="@drawable/button_home_screee"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find And Claim Your Business"
        android:gravity="center"
        android:textSize="14dp"
        android:textColor="@color/button"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <EditText
        android:id="@+id/edit_search_by_business"
        android:layout_width="150dp"
        android:layout_height="40sp"
        android:background="@drawable/button_home_screee"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:hint="Business Name"
        android:textColorHint="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:paddingLeft="20sp"/>
    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/blue_bg_tv">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/search32"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/txt_search_by_business"
            android:layout_width="150dp"
            android:layout_height="40sp"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true"
            android:text="Get Started"
            android:textSize="14sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="20sp"
            android:paddingLeft="20sp"/>
    </LinearLayout>

</LinearLayout>
    <ListView
        android:id="@+id/claim_business"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></ListView>
</LinearLayout>
