<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/red"

        >
        <TextView
            android:id="@+id/toolbar_drawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/listview_32"
            android:padding="5dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="start"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_view"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_manage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="5dp"

                >
                <TextView
                    android:id="@+id/credit_point"
                    android:layout_width="match_parent"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:text="CREDITED POINT"
                    android:layout_height="wrap_content"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/tv_credited_point"
                    android:layout_below="@+id/credit_point"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="5dp"

                >
                <TextView
                    android:id="@+id/debited_point"
                    android:layout_width="match_parent"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:text="DEBITED POINT"
                    android:layout_height="wrap_content"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/tv_debited_point"
                    android:layout_below="@+id/debited_point"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="5dp"

                >
                <TextView
                    android:id="@+id/text_balance"
                    android:layout_width="match_parent"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:text="BALANCE"
                    android:layout_height="wrap_content"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_below="@+id/text_balance"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"/>

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
